# 设置固件大小:
CONFIG_TARGET_KERNEL_PARTSIZE=30
CONFIG_TARGET_ROOTFS_PARTSIZE=300

CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y

# EFI支持:
CONFIG_GRUB_IMAGES=y
CONFIG_EFI_IMAGES=y
CONFIG_VMDK_IMAGES=n
CONFIG_ISO_IMAGES=y
CONFIG_TARGET_ROOTFS_TARGZ=n

# 打开适用于VMware的VM Tools:
# CONFIG_PACKAGE_open-vm-tools=y

# 打开适用于PVE的qemu-guest-agent:
# CONFIG_PACKAGE_qemu-ga=y 

# CONFIG_PACKAGE_luci-app-wizard=y
CONFIG_PACKAGE_luci-app-tcpdump=y

# 你好，世界
# CONFIG_PACKAGE_luci-app-vssr is not set
# CONFIG_PACKAGE_luci-app-bypass is not set
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-ssr-plus=y

# 主题
CONFIG_PACKAGE_luci-theme-opentopd=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y
